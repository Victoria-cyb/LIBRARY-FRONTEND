:root {
    --primary: #007bff;
    --success: #28a745;
    --warning: #ffc107;
    --danger: #dc3545;
    --light: #f8f9fa;
    --dark: #343a40;
}

* { box-sizing: border-box; margin: 0; padding: 0; }

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: var(--light);
    color: var(--dark);
}

nav {
    background: var(--primary);
    padding: 1rem;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

nav ul {
    list-style: none;
    display: flex;
    gap: 15px;
}

nav ul li a, nav ul li button {
    color: white;
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1rem;
}

nav ul li button:hover, nav ul li a:hover {
    text-decoration: underline;
}

.view {
    display: none;
    padding: 20px;
    animation: fade 0.3s ease-in-out;
}

.view.active {
    display: block;
}

/* ðŸ  Home Page Styling */
#viewHome {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

#viewHome h2 {
    font-size: 3rem;
    margin-top: 60px;
    color: var(--primary);
}

#viewHome p {
    margin: 20px 0;
    font-size: 1.2rem;
}

#viewHome button {
    padding: 12px 20px;
    font-size: 1rem;
    background: var(--success);
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

#viewHome button:hover {
    background: var(--dark);
}

/* Book Grid */
.book-card {
    background: white;
    padding: 15px;
    margin: 10px;
    border-radius: 6px;
    border: 1px solid #ddd;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    width: 220px;
}

.book-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

/* Forms */
.auth-form input,
.return-form input {
    display: block;
    width: 80%;
    margin: 10px auto;
    padding: 10px;
}

.auth-form button,
.return-form button {
    width: 50%;
    padding: 10px;
    margin-top: 10px;
    background: var(--success);
    border: none;
    color: white;
    cursor: pointer;
}

/* Loader */
#loader {
    position: fixed;
    top:0; left:0;
    width: 100%; height: 100%;
    background: rgba(255,255,255,0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}
.spinner {
    border: 6px solid #ccc;
    border-top: 6px solid var(--primary);
    border-radius: 50%;
    width: 50px; height: 50px;
    animation: spin 0.8s linear infinite;
}
/* Borrow Form */
.borrow-form input {
    display: block;
    width: 80%;
    margin: 10px auto;
    padding: 10px;
}

.borrow-form button {
    width: 50%;
    padding: 10px;
    margin-top: 10px;
    background: var(--primary);
    border: none;
    color: white;
    cursor: pointer;
}

.borrow-form button:hover {
    background: var(--dark);
}

.view{
    display: none;
}

#dashboardView {
    padding: 20px;
    font-family: Arial, sans-serif;
}

.navbar {
    background-color: #f8f8f8;
    padding: 15px;
    border-bottom: 1px solid #ccc;
}

.navbar strong {
    font-size: 1.2em;
}

.navbar nav a {
    margin-right: 10px;
    text-decoration: none;
    color: #333;
    font-weight: bold;
}

.navbar nav a:hover {
    color: #007bff;
}

#dashboardContent {
    margin-top: 20px;
}


.toast {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: var(--dark);
    color: white;
    padding: 10px 20px;
    border-radius: 4px;
    opacity: 0.9;
    z-index: 1001;
}
.toast.success { background: var(--success); }
.toast.error { background: var(--danger); }
.toast.info { background: var(--primary); }


@keyframes spin { to { transform: rotate(360deg); } }
@keyframes fade { from { opacity: 0; } to { opacity: 1; } }

@media(max-width: 768px){
    nav ul { flex-direction: column; gap: 10px; }
}


